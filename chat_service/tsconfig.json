{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext", // Required for ESM + .js imports
        "moduleResolution": "NodeNext", // Required for ESM module resolution
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src/**/*",
        "src/types/**/*",
        "src/global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}